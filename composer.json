{
    "name": "sc-config-editor/redis-integration",
    "description": "Star Citizen Configuration Editor with Redis support",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "SCConfigEditor\\": "src/"
        }
    },
    "scripts": {
        "redis:test": "php test_redis_connection.php",
        "redis:migrate": "php scripts/migrate_to_redis.php",
        "redis:stats": "php scripts/redis_stats.php"
    },
    "config": {
        "optimize-autoloader": true
    }
}
